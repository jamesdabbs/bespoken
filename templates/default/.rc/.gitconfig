[core]
	excludesfile = /Users/james/.gitignore_global
[user]
	name = James Dabbs
	email = jamesdabbs@gmail.com
[color]
	ui = auto
[difftool "Kaleidoscope"]
	cmd = ksdiff-wrapper git \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[github]
	user = jamesdabbs
[push]
	default = tracking
[alias]
  c   = commit
  co  = checkout
  d   = diff --word-diff
  ds  = diff --word-diff --staged
  dt  = difftool
  dts = difftool --staged
  l   = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  s   = status --short
  wip = commit -am "WIP"

